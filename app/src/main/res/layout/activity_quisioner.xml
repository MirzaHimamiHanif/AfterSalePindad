            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Kualitas produk/jasa yang kami berikan"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <RadioGroup
                android:id="@+id/rGroup6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp">
                <RadioButton
                    android:id="@+id/skor61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"/>
                <RadioButton
                    android:id="@+id/skor62"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"/>
                <RadioButton
                    android:id="@+id/skor63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"/>
                <RadioButton
                    android:id="@+id/skor64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"/>
                <RadioButton
                    android:id="@+id/skor65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Kompensasi teknisi dalam mendeskripsikan kerusakan/permasalahan"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <RadioGroup
                android:id="@+id/rGroup7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp">
                <RadioButton
                    android:id="@+id/skor71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"/>
                <RadioButton
                    android:id="@+id/skor72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"/>
                <RadioButton
                    android:id="@+id/skor73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"/>
                <RadioButton
                    android:id="@+id/skor74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"/>
                <RadioButton
                    android:id="@+id/skor75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"/>
            </RadioGroup>
            <Button
                android:id="@+id/btnSQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
